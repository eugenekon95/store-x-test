<% @products.each do |product| %>
  <div class="col-lg-4 col-md-6 mb-4">
    <div class="card h-100">
      <%= image_tag(product.image_url, class: "card-img-top") %>
      <div class="card-body">
        <h4 class="card-title">
          <%= link_to product.name, product, class: "text-danger" %>
        </h4>
        <div class="row">
          <div class="col-6">
            <h5>$<%= product.price %></h5>
          </div>
          <div class="col-6">
            <%= link_to(product_order_items_path(product), method: :post, class: "text-danger float-right") do %>
              <i class="fas fa-shopping-basket"></i>
            <% end %>
          </div>
        </div>
        <p class="text-justify card-text"><%= product.description %></p>
      </div>
    </div>
  </div>
<% end %>